<% @orders.each do |order| %>
  <tr>
    <td><%= order.nombre %></td>
    <td><%= order.empresa %></td>
    <td><%= order.telefono %></td>
    <td><%= order.updated_at %></td>    
    <% @usuario = User.find_by_id(order.userid) %>
    <td><%= @usuario.email %></td>
    <td><%= order.status %></td>
    <td style="text-align:center;width:150px;"><%= order.updated_at %></td>
    <td><%= link_to 'Mostrar', order %></td>
    <td><%= link_to 'Editar', edit_order_path(order) %></td>
    <td><%= link_to 'Eliminar', order, confirm: 'Esta seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

