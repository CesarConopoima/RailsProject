<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h2>Escriba los detalles del comprador aquí</h2>
<p>*Todos los campos deben ser llenados*</p>
<h3>Datos Personales:</h3>
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, size: 20 %>
  </div>
<h3>Datos de la empresa:</h3>
  <div class="field">
    <%= f.label :empresa %><br />
    <%= f.text_field :empresa,  rows: 3, cols:40 %>
  </div>
  <div class="field">
    <%= f.label :dirección %><br />
    <%= f.text_area :direccion, rows: 3, cols:40 %>
  </div>
<h3>Datos de contacto:</h3>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, size:40 %>
  </div>
  <div class="field">
    <%= f.label :teléfono %><br />
    <%= f.text_field :telefono, size:40 %>
  </div>
  <div class="field">
    <%= f.label :teléfono_alternativo %><br />
    <%= f.text_field :telefonoaux, size:40 %>
  </div>
<h3>Localidad del envio:</h3>
  <div class="field">
    <%= f.label :localidad_de_venezuela %><br />
    <%= f.select :localidadvenezuela, Order::VENEZUELA_ESTADOS, 
    prompt: 'Selecciona tu Región de Venezuela' %>
  </div>
  <div class="field">
    <%= f.label :dirección_MRW_de_envio %><br />
    <%= f.text_area :direccionaux, rows: 3, cols:40 %>
  </div>
  <div class="field">
<h3>Tipo de pago:</h3>
    <%= f.label :tipo_de_pago %><br />
    <%= f.select :tipoPago, Order::PAYMENT_TYPES,
    prompt: 'Selecciona tu tipo de pago' %>
  </div>
   <div class="field">
  <%= show_simple_captcha(:label => "Escribe los caracteres de la imagen") %>
  </div>
  <div class="actions">
    <%= f.submit 'Hacer Orden' %>
  </div>
<% end %>
