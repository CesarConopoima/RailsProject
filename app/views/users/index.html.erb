<h1>Usuarios</h1>
<table class="table table-striped">
 <thead>
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Empresa</th>
    <th>Fecha de creaci√≥n</th>
    <th>Accciones</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| -%>
   <tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td><%= user.nombreEmpresa %></td>
    <td><%= user.created_at %></td>
