<style type="text/css">
div.lista { float:left; padding-left:10px;padding-top: 12px;text-align:center;width: 190px;font-size: 80%;}
.clearBoth { clear:both; }
a:link {text-decoration:none;}
a:visited {text-decoration:none;}
a:hover {background-color:#6ca0bb;}
a:active {background-color:#6ca0bb;}
</style>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Productos <%= @marca.capitalize %> Miscelaneus</h1> 
	<% @k = 0 %>
	<% @productoMis.each do |producto| %>
		<div class="lista">
	<%= link_to "#{producto.nombre.upcase.gsub("/"," ")}", tienda_vista_path(:marca => "#{@marca}", :nombre => "#{producto.nombre.downcase}") %>
		</div>
		<% @k+=1 %>
		<% if @k == 2 %>
		<br class="clearBoth" />
		<% @k = 0 %>
		<% end %>
<% end %>
	