<style type="text/css">
div.lista { float:left; padding-right:30px;padding-top: 10px;text-align:center;width: 100px }
.clearBoth { clear:both; }
</style>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Productos <%= @marca.capitalize %></h1> 
	<% @k = 0 %>
	<% @productos2.each do |producto| %>
		<div class="lista">
	<%= link_to "#{producto.nombres}", tienda_vista_path(:marca => "#{@marca}", :nombre => "#{producto.nombres.downcase}") %>
		</div>
		<% @k+=1 %>
		<% if @k == 3 %>
		<br class="clearBoth" />
		<% @k = 0 %>
		<% end %>
<% end %>
	